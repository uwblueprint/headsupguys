{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@definitions/*": ["src/definitions/*"],
            "@definitions": ["src/definitions"],
            "@components/*": ["src/components/*"],
            "@components": ["src/components"],
            "@public/*": ["public/*"],
            "@public": ["public"],
            "@styles/*": ["src/styles/*"],
            "@styles": ["src/styles"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "database/scripts/seed.ts"],
    "exclude": ["node_modules"]
}
